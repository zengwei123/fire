<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    android:orientation="vertical">

    <include layout="@layout/z_include_title"></include>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#ffffff"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/DayPractice_item1"
            android:layout_width="119dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#FF4E50"
            android:textSize="16dp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="#E6E6E6"></View>

        <TextView
            android:id="@+id/DayPractice_item2"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/C2B2B2B"
            android:textSize="16dp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="#E6E6E6"></View>

        <TextView
            android:id="@+id/DayPractice_item3"
            android:layout_width="119dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/C2B2B2B"
            android:textSize="16dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <LinearLayout
            android:id="@+id/DayPractice_Date1"
            android:layout_margin="5dp"
            android:background="@drawable/daypractice_date_style2"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/DayPractice_Year1"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="14sp"
                android:textColor="#FF4E50"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/DayPractice_Month1"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="14sp"
                android:textColor="#FF4E50"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/DayPractice_Date2"
            android:layout_margin="5dp"
            android:background="@drawable/daypractice_date_style1"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/DayPractice_Year2"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="14sp"
                android:textColor="#FF4E50"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/DayPractice_Month2"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="14sp"
                android:textColor="#FF4E50"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/DayPractice_Date3"
            android:layout_margin="5dp"
            android:background="@drawable/daypractice_date_style1"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/DayPractice_Year3"
                android:layout_weight="1"
                android:textSize="14sp"
                android:gravity="center"
                android:textColor="#FF4E50"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/DayPractice_Month3"
                android:layout_weight="1"
                android:textSize="14sp"
                android:gravity="center"
                android:textColor="#FF4E50"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:background="@drawable/daypractice_date_style1"
            android:layout_margin="5dp"
            android:id="@+id/DayPractice_Date4"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/DayPractice_Year4"
                android:layout_weight="1"
                android:textSize="14sp"
                android:gravity="center"
                android:textColor="#FF4E50"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/DayPractice_Month4"
                android:layout_weight="1"
                android:textSize="14sp"
                android:gravity="center"
                android:textColor="#FF4E50"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:overScrollMode="never"
        android:id="@+id/DayPractice_Recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>
</LinearLayout>
