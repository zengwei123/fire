<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/ErrorTopic_One"
            android:textStyle="bold"
            android:padding="5dp"
            android:textColor="@color/C2B2B2B"
            android:textSize="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/ErrorTopic_Content"
            android:padding="5dp"
            android:textColor="@color/C2B2B2B"
            android:textSize="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <RelativeLayout
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:background="#FFF2F2"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/ErrorTopic_Answer"
            android:textColor="@color/C2B2B2B"
            android:textSize="16dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        
        <TextView
            android:id="@+id/ErrorTopic_Parsing"
            android:text="123"
            android:textColor="#52C41A"
            android:layout_alignParentRight="true"
            android:textSize="18dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/ErrorTopic_Delete"
            android:layout_toLeftOf="@+id/ErrorTopic_Parsing"
            android:layout_marginRight="20dp"
            android:text="123"
            android:textColor="#F5222D"
            android:textSize="16dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </RelativeLayout>
    <TextView
        android:id="@+id/ErrorTopic_MyAnswer"
        android:textColor="@color/C2B2B2B"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:textSize="16dp"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/ErrorTopic_Parsing_Text"
        android:textColor="@color/C2B2B2B"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        android:textSize="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <View
        android:background="#F5F5F5"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="3dp"></View>
</LinearLayout>
