<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginLeft="12dp"
    android:layout_marginTop="8dp"
    android:layout_marginRight="12dp"
    android:padding="5dp"
    android:layout_height="95dp"
    android:background="@drawable/parsing_style_item"
    android:orientation="vertical">
    <TextView
        android:id="@+id/TrueTopic_Recycler_Title"
        android:text="2018年一级注册消防工程师《消防安全技术实务》考试真题《消防安全技术实务》考试真题"
        android:padding="5dp"
        android:textSize="14sp"
        android:maxLines="2"
        android:textColor="@color/C2B2B2B"
        android:layout_width="match_parent"
        android:layout_height="49dp" />
    <View
        android:background="#E6E6E6"
        android:layout_width="match_parent"
        android:layout_height="1dp"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:id="@+id/TrueTopic_Recycler_K"
            android:text="在线考试"
            android:gravity="center"
            android:drawableLeft="@mipmap/truetopic_recycler_item1"
            android:paddingRight="40dp"
            android:paddingLeft="40dp"
            android:textColor="#666666"
            android:layout_width="167dp"
            android:layout_height="match_parent" />
        <View
            android:background="#E6E6E6"
            android:layout_width="1dp"
            android:layout_height="match_parent" >
        </View>
        <TextView
            android:id="@+id/TrueTopic_Recycler_L"
            android:text="查看试题"
            android:gravity="center"
            android:drawableLeft="@mipmap/truetopic_recycler_item2"
            android:paddingRight="40dp"
            android:paddingLeft="40dp"
            android:textColor="#666666"
            android:layout_width="168dp"
            android:layout_height="match_parent" />
    </LinearLayout>
</LinearLayout>
