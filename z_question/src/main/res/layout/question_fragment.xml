<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#f5f5f5"
    android:orientation="vertical">

    <include layout="@layout/z_include_modeltitle"></include>
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/Question_SwipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.design.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.design.widget.AppBarLayout
                android:id="@+id/Question_AppBar"
                app:layout_scrollFlags="enterAlways|enterAlways"
                android:background="#FFFFFF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.design.widget.CollapsingToolbarLayout
                    app:layout_scrollFlags="scroll|enterAlwaysCollapsed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="vertical"
                        android:background="#f5f5f5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:layout_margin="12dp"
                            android:background="@drawable/question_style1"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="151dp">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="75dp">
                                <TextView
                                    android:id="@+id/Question_DayQuestion"
                                    android:layout_toLeftOf="@+id/view1"
                                    android:drawableLeft="@mipmap/question_item1"
                                    android:text="每日一练"
                                    android:textColor="#333333"
                                    android:paddingLeft="30dp"
                                    android:paddingRight="30dp"
                                    android:gravity="center"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent" />
                                <View
                                    android:id="@+id/view1"
                                    android:background="#E6E6E6"
                                    android:layout_centerHorizontal="true"
                                    android:layout_width="1dp"
                                    android:layout_height="match_parent"></View>
                                <TextView
                                    android:id="@+id/Question_TrueTopic"
                                    android:layout_toRightOf="@+id/view1"
                                    android:drawableLeft="@mipmap/question_item2"
                                    android:text="历年真题"
                                    android:textColor="#333333"
                                    android:paddingLeft="30dp"
                                    android:paddingRight="30dp"
                                    android:gravity="center"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent" />
                            </RelativeLayout>
                            <View
                                android:background="#E6E6E6"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"></View>
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="75dp">
                                <TextView
                                    android:id="@+id/Question_Simulation"
                                    android:layout_toLeftOf="@+id/view2"
                                    android:drawableLeft="@mipmap/question_item4"
                                    android:text="模拟试题"
                                    android:textColor="#333333"
                                    android:paddingLeft="30dp"
                                    android:paddingRight="30dp"
                                    android:gravity="center"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent" />
                                <View
                                    android:id="@+id/view2"
                                    android:background="#E6E6E6"
                                    android:layout_centerHorizontal="true"
                                    android:layout_width="1dp"
                                    android:layout_height="match_parent"></View>
                                <TextView
                                    android:id="@+id/Question_Parsing"
                                    android:layout_toRightOf="@+id/view2"
                                    android:drawableLeft="@mipmap/question_item3"
                                    android:text="试题解析"
                                    android:textColor="#333333"
                                    android:paddingLeft="30dp"
                                    android:paddingRight="30dp"
                                    android:gravity="center"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent" />
                            </RelativeLayout>
                        </LinearLayout>
                        <RelativeLayout
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:layout_marginLeft="12dp"
                            android:layout_marginRight="12dp"
                            android:layout_marginBottom="12dp"
                            android:background="@drawable/question_style2"
                            android:layout_width="match_parent"
                            android:layout_height="45dp">
                            <TextView
                                android:id="@+id/Subjects_Title1"
                                android:layout_margin="8dp"
                                android:drawableLeft="@mipmap/apply1"
                                android:gravity="center|left"
                                android:textColor="@color/C2B2B2B"
                                android:layout_toLeftOf="@+id/Question_Apply_Submit1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />
                            <TextView
                                android:id="@+id/Question_Apply_Submit1"
                                android:layout_margin="8dp"
                                android:text="立即报名"
                                android:gravity="center"
                                android:textSize="14sp"
                                android:textColor="@color/C2B2B2B"
                                android:layout_alignParentRight="true"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent" />
                        </RelativeLayout>
                    </LinearLayout>
                </android.support.design.widget.CollapsingToolbarLayout>
                <LinearLayout
                    app:layout_behavior="@string/appbar_scrolling_view_behavior"
                    android:orientation="vertical"
                    android:background="#f5f5f5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <android.support.design.widget.TabLayout
                        android:id="@+id/Question_TabLayout"
                        android:background="#ffffff"
                        app:tabBackground="@android:color/transparent"
                        android:focusable="true"
                        app:tabGravity="fill"
                        app:tabMode="fixed"
                        app:tabTextColor="#666666"
                        android:layout_alignParentBottom="true"
                        app:tabIndicatorColor="#ffffff"
                        android:layout_width="match_parent"
                        android:layout_height="40dp">
                    </android.support.design.widget.TabLayout>
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/Question_Recycler"
                        android:layout_margin="12dp"
                        android:background="@drawable/question_viewpage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </android.support.v7.widget.RecyclerView>

                </LinearLayout>
            </android.support.design.widget.AppBarLayout>
        </android.support.design.widget.CoordinatorLayout>
    </android.support.v4.widget.SwipeRefreshLayout>
</LinearLayout>
