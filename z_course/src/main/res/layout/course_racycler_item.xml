<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="6dp"
    android:background="@drawable/course_style"
    android:orientation="vertical"
    android:paddingLeft="8dp"
    android:paddingRight="8dp">

    <TextView
        android:id="@+id/Course_Title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:ellipsize="end"
        android:gravity="center|left"
        android:lines="2"
        android:textColor="@color/C2B2B2B"
        android:textSize="15sp" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <LinearLayout
            android:gravity="center|left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/Course_KeJian"
                android:text="课件"
                android:textSize="13dp"
                android:background="@drawable/text_style"
                android:gravity="center"
                android:textColor="#4271E5"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" />
            <TextView
                android:id="@+id/Course_isKeJian"
                android:text="未完成，现在做"
                android:textSize="13dp"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:background="@drawable/text_style1"
                android:textColor="#FF4E50"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:gravity="center|right"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/Course_Biao"
                android:text="标清"
                android:textSize="13dp"
                android:gravity="center"
                android:textColor="#ffffff"
                android:background="@drawable/text_style2"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/Course_Gao"
                android:text="高清"
                android:textSize="13dp"
                android:gravity="center"
                android:textColor="#ffffff"
                android:background="@drawable/text_style3"
                android:layout_marginRight="5dp"
                android:layout_width="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>
