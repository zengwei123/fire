<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center|top"
    android:orientation="vertical">
    <TextView
        android:id="@+id/Optimal_item4_Text1"
        android:text="班级保障"
        android:layout_marginBottom="10dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_width="wrap_content"
        android:textSize="11sp"
        android:layout_height="17dp" />
    <LinearLayout
        android:layout_marginTop="17dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/Optimal_item4_Image1"
                android:src="@mipmap/items_4_2"
                android:layout_width="15dp"
                android:layout_height="15dp" />
            <TextView
                android:id="@+id/Optimal_item4_Text2"
                android:textColor="@color/C2B2B2B"
                android:gravity="center|left"
                android:textSize="11sp"
                android:letterSpacing="0.1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/Optimal_item4_Image2"
                android:src="@mipmap/items_4_2"
                android:layout_gravity="top"
                android:layout_width="15dp"
                android:layout_height="15dp" />
            <TextView
                android:id="@+id/Optimal_item4_Text3"
                android:textColor="@color/C2B2B2B"
                android:gravity="center|left"
                android:textSize="11sp"
                android:letterSpacing="0.1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
