<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <include layout="@layout/z_include_title"></include>
    <LinearLayout
        android:padding="16dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/Registered_Phone"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#ffffff"
            android:drawableLeft="@mipmap/user_forgetpass_phone"
            android:hint="请输入手机号"
            android:inputType="number"
            android:maxLines="1"
            android:paddingLeft="10dp"
            android:textSize="14sp" />
        <View
            android:background="#EEEEEE"
            android:layout_width="match_parent"
            android:layout_height="1dp"></View>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <EditText
                android:id="@+id/Registered_code_edit"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@null"
                android:inputType="number"
                android:maxLines="1"
                android:drawableLeft="@mipmap/user_forgetpass_code"
                android:paddingLeft="10dp"
                android:textSize="14sp"
                android:hint="请输入计算结果" />
            <ImageView
                android:id="@+id/Registered_code_image"
                android:text="发送验证码"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginRight="5dp"
                android:layout_width="60dp"
                android:layout_height="30dp" />
        </LinearLayout>
        <View
            android:background="#EEEEEE"
            android:layout_width="match_parent"
            android:layout_height="1dp"></View>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <EditText
                android:id="@+id/Registered_code"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@null"
                android:inputType="number"
                android:maxLines="1"
                android:drawableLeft="@mipmap/user_forgetpass_duanxin"
                android:paddingLeft="10dp"
                android:textSize="14sp"
                android:hint="请输入手机验证码" />
            <TextView
                android:id="@+id/Registered_code_but"
                android:text="获取验证码"
                android:gravity="center"
                android:textSize="13sp"
                android:background="@drawable/login_edit"
                android:layout_marginRight="5dp"
                android:textColor="#FF4E50"
                android:layout_width="100dp"
                android:layout_height="25dp" />
        </LinearLayout>
        <View
            android:background="#EEEEEE"
            android:layout_width="match_parent"
            android:layout_height="1dp"></View>
        <EditText
            android:id="@+id/Registered_Pass"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="#ffffff"
            android:drawableLeft="@mipmap/user_forgetpass_pass"
            android:paddingLeft="10dp"
            android:hint="登录密码"
            android:textSize="13sp"
            android:inputType="textPassword"
            android:maxLines="1" />
        <View
            android:background="#EEEEEE"
            android:layout_width="match_parent"
            android:layout_height="1dp"></View>
        <EditText
            android:id="@+id/Registered_Pass1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="#ffffff"
            android:drawableLeft="@mipmap/user_forgetpass_pass"
            android:paddingLeft="10dp"
            android:hint="确认密码"
            android:textSize="13sp"
            android:inputType="textPassword"
            android:maxLines="1" />
        <View
            android:background="#EEEEEE"
            android:layout_width="match_parent"
            android:layout_height="1dp"></View>
        <EditText
            android:id="@+id/Registered_QQ"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="#ffffff"
            android:drawableLeft="@mipmap/user_forgetpass_qq"
            android:paddingLeft="10dp"
            android:hint="考试QQ"
            android:textSize="13sp"
            android:inputType="number"
            android:maxLines="1" />
        <View
            android:background="#EEEEEE"
            android:layout_width="match_parent"
            android:layout_height="1dp"></View>
        <TextView
            android:id="@+id/Registered_Submits"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/zxcafdsas"
            android:background="#FF4E50"
            android:gravity="center"
            android:text="注册"
            android:textColor="#ffffff"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/Registered_Agreement"
            android:layout_marginTop="10dp"
            android:textSize="@dimen/Text_Size_2"
            android:textColor="@color/C2B2B2B"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>
