<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="12dp"
    android:layout_marginTop="8dp"
    android:layout_marginRight="12dp"
    android:padding="5dp"
    android:background="@drawable/news_style_item"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/News_Recycler_Item_Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textColor="@color/C2B2B2B"
        android:textSize="15sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/News_Recycler_Item_Time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:padding="5dp"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/News_Recycler_Item_Cha"
            android:background="@drawable/reference_item_style"
            android:layout_marginRight="5dp"
            android:textColor="#FF4E50"
            android:text="立即查看"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:lines="1"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:textSize="12sp" />

    </RelativeLayout>

</LinearLayout>
